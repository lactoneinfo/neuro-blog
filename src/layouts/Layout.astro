---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<div class="wrapper">
    <Header />
    <div class="content-wrapper">
        <main class="typography"><slot /></main>
        <Footer />
    </div>
</div>

<style>
.wrapper {
    display: flex;
    margin: 0 auto;
    width: 100%;
    max-width: 1200px;
    min-height: 100vh;
}

.wrapper > header,
.wrapper > :global(header) {
  flex: 0 0 240px;
}


.content-wrapper {
    display: flex;
    flex-direction: column;
    flex: 1;
    max-width: 960;
    box-sizing: border-box;
}

main {
    padding: 1em 2em;
    flex: 1;
    overflow: auto;
}
</style>
