---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<div class="wrapper">
  <button id="menu-toggle" class="hamburger">☰</button>
  <div id="menu-overlay" class="menu-overlay"></div>
  <div id="mobile-header-wrapper" class="mobile-header">
    <button id="menu-close" class="close-button">✕</button>
    <Header />
  </div>
  <div class="content-wrapper">
    <main class="typography"><slot /></main>
    <Footer />
  </div>
</div>

<style>
.wrapper {
  margin: 0 auto;
  width: 100%;
  max-width: 1080px;
  min-height: 100vh;
  position: relative;
  display: flex;
}

.content-wrapper {
  display: flex;
  flex-direction: column;
  flex: 1;
  max-width: 900px;
  box-sizing: border-box;
  background-color: var(--color-bg);
  z-index: 0;
}

main {
  padding: 1em 2em;
  flex: 1;
  overflow: auto;
}

.hamburger {
  display: none;
}

.close-button {
  display: none;
}

/* ====== Mobile Styles ====== */
@media (max-width: 720px) {
  .hamburger {
    display: block;
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 1100;
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    transition: opacity 0.3s;
  }

  .close-button {
    display: block;
    position: fixed;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    font-size: 2rem;
    z-index: 1100;
    cursor: pointer;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
  }

  .close-button.show {
    opacity: 1;
    pointer-events: auto;
  }

  .hamburger.hide {
    opacity: 0;
    pointer-events: none;
  }

  #mobile-header-wrapper {
    position: fixed;
    top: 0;
    right: 0;
    width: 80vw;
    max-width: 320px;
    height: 100vh;
    background: var(--color-bg-soft);
    box-shadow: -2px 0 10px rgba(0, 0, 0, 0.2);
    transform: translateX(100%);
    transition: transform 0.3s ease;
    z-index: 1050;
    overflow-y: auto;
  }

  #mobile-header-wrapper.open {
    transform: translateX(0);
  }

  .menu-overlay {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.4);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 1040;
  }

  .menu-overlay.show {
    opacity: 1;
    pointer-events: auto;
  }

  .wrapper {
    flex-direction: column;
  }
}
</style>

<script>
  const toggle = document.getElementById('menu-toggle');
  const closeBtn = document.getElementById('menu-close');
  const header = document.getElementById('mobile-header-wrapper');
  const overlay = document.getElementById('menu-overlay');

  const showMenu = () => {
    header?.classList.add('open');
    overlay?.classList.add('show');
    toggle?.classList.add('hide');
    closeBtn?.classList.add('show');
  };

  const hideMenu = () => {
    header?.classList.remove('open');
    overlay?.classList.remove('show');
    toggle?.classList.remove('hide');
    closeBtn?.classList.remove('show');
  };

  toggle?.addEventListener('click', showMenu);
  closeBtn?.addEventListener('click', hideMenu);
  overlay?.addEventListener('click', hideMenu);
</script>
