---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<div class="wrapper">
    <Header />
    <div class="content-wrapper">
        <main><slot /></main>
        <Footer />
    </div>
</div>

<style>
.wrapper {
    display: flex;
    min-height: 100vh;
}

.content-wrapper {
    display: flex;
    flex-direction: column;
    flex: 1;
}

.app { 
    display:flex;
    min-height:100vh
}
.pane { 
    flex:1; 
    display:flex; 
    flex-direction:column 
}

main {
    flex: 1;
    overflow: auto;
}
</style>
